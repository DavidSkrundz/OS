# Clear builtin rules
.SUFFIXES:

# Goal defaults
.DEFAULT_GOAL := all
.PHONY: all
.PHONY: clean

# Shell
SHELL := /bin/bash
UNAME := $(shell uname -s)

# Directories
BUILD_DIR := .build
SRC_DIR := src

# Tools
TEX := xelatex

QEMU_X86 := qemu-system-i386
QEMU_X64 := qemu-system-x86_64
QEMUFLAGS := -monitor stdio -drive format=raw,file=
