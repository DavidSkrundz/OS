TOPDIR := .
include $(TOPDIR)/Makedefs

VPATH = @srcdir@

BLOCK_SIZE := @block_size@
ARCHITECTURE := @architecture@
BITS32 := @bit32@
BITS64 := @bit64@
FORMAT := @format@
BIOS := @bios@
EFI := @efi@


FOLDERS := 

IMAGE := disk.hdd
all: $(IMAGE)
	@

include $(TOPDIR)/Make.require
include $(TOPDIR)/Make.image


$(IMAGE_REQUIREMENTS): RECURSE_MAKE
	@

.PHONY: RECURSE_MAKE
RECURSE_MAKE:
	@

define RECURSE_TEMPLATE =
  .PHONY: $(1)-all
  $(1)-all:
	@$$(MAKE) -C $(1) all
  .PHONY: $(1)-clean
  $(1)-clean:
	@$$(MAKE) -C $(1) clean

  RECURSE_MAKE: $(1)-all
  clean: $(1)-clean
endef

$(foreach folder,$(FOLDERS),$(eval $(call RECURSE_TEMPLATE,$(folder))))


clean:
	@$(RM) config.log config.status
	@$(RM) -r autom4te.cache
	@$(RM) $(IMAGE)

.PHONY: clean-all
clean-all: clean
	@$(RM) Makefile
